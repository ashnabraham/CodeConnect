<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header><img alt="logo" src="https://www.kainos.com/globalassets/images/5_logos/kainos_logo.png?mode=crop&width=400"
        class="header__logo-img"></header>
        
  <div class="page-title">
    <h1>User List</h1>
    </div>

    <main>
    <% if (users && users.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td><a href="/users/<%= user.id %>">View</a></td>
                        <td><a href="/users/update/<%= user.id %>">Edit</a></td>
                        <td><a href="/users/delete/<%= user.id %>">Delete</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No users found.</p>
    <% } %>

    <form action="/users/add" method="get">
        <input type="submit" value="Create New User">
    </form> 
</main>
</body>

<footer>Copyright Â© 2024 Kainos. Contact:
